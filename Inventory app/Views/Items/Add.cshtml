@model Inventory_app.Program

@{
    ViewData["Title"] = "Add";
    string[] names = new string[10];
    int[] prices = new int[10];
    int i = 0;
}

@{
    string productName = Context.Request.Query["productName"];
    string productPrice = Context.Request.Query["productPrice"];
}
<h1>Add</h1>

<hr />
<div class="row">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="align-content-center" >

            @{
                if(String.IsNullOrEmpty(productName)&&string.IsNullOrEmpty(productPrice))
                {
                    <form action="" method="get">
                        <ul>
                            <dl>
                                <label>Product Name</label>
                                <input type="text" id="productName" name="productName" value="" 
                                required 
                                minlength="7"
                                maxlength="30" />
                            </dl>
                            <dl>
                                <label>Product Price</label>
                                <input type="number" id="productPrice" name="productPrice" value="" required/>
                            </dl>
                            <dl>
                                <input type="submit" value="Submit" class="btn btn-primary" name="submit"/>
                            </dl>
                        </ul>
                    </form>
                    
                }
                if (productName != null && productPrice != null)
                {
                    <ul>
                        <dl>
                            product name : @productName
                        </dl>
                        <dl>
                            Product Price : @productPrice
                        </dl>
                        <dl>submited succssfully</dl>
                    </ul>
                }
            }

           
           
            </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
